---
  import Layout from '../layouts/common.astro';
---
 <Layout title="Pricing" titleBegin="" titleEffect="Pricing" titleEnd="Plans!!!">
  <!-- Plans -->
      <div class=" text-center mt-20 mx-auto max-w-3xl px-10">
        <div class="space-y-12 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-x-8">
          <div
            class="p-8 bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col cursor-pointer  
            hover:bg-blue-200 hover:shadow-2xl hover:shadow-red-300 hover:scale-110 hover:-translate-y-1 
            transition ease-in-out delay-150 
            focus:outline-none focus:ring focus:bg-blue-200 focus:ring-violet-300 
            active:bg-blue-50"
          >
            <h3 class="text-3xl font-semibold text-gray-900">Basic</h3>

            <p class="mt-4 mx-auto">
              <span class=" text-5xl font-extrabold tracking-tight">$29</span>
              <span class=" ml-1 text-xl font-semibold">/month</span>
            </p>
            <p class="mt-6 text-gray-500">The essentials</p>

            <ul role="list" class="mt-6 space-y-6">
              <li class="flex">
                <span class=" -mt-2 text-blue-500 text-3xl">&#10003;</span>
                <span class=" ml-3 text-gray-500 text-left"
                  >Acces to our services</span
                >
              </li>
              <li class="flex">
                <span class=" -mt-2 text-blue-500 text-3xl">&#10003;</span>
                <span class=" ml-3 text-gray-500 text-left">Support</span>
              </li>
            </ul>
          </div>
          <div
            class="p-8 bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col cursor-pointer  
            hover:bg-blue-200 hover:shadow-2xl hover:shadow-red-300 hover:scale-110 hover:-translate-y-1 
            transition ease-in-out delay-150 
            focus:outline-none focus:ring focus:bg-blue-200 focus:ring-violet-300 
            active:bg-blue-50"
          >
            <h3 class="text-3xl font-semibold text-gray-900">Pro</h3>

            <p class="mt-4 mx-auto">
              <span class=" text-5xl font-extrabold tracking-tight">$99</span>
              <span class=" ml-1 text-xl font-semibold">/month</span>
            </p>
            <p class="mt-6 text-gray-500">Much more features</p>

            <ul role="list" class="mt-6 space-y-6">
              <li class="flex">
                <span class=" -mt-2 text-blue-500 text-3xl">&#10003;</span>
                <span class=" ml-3 text-gray-500 text-left"
                  >Acces to our services</span
                >
              </li>
              <li class="flex">
                <span class=" -mt-2 text-blue-500 text-3xl">&#10003;</span>
                <span class=" ml-3 text-gray-500 text-left">Support</span>
              </li>
              <li class="flex">
                <span class=" -mt-2 text-blue-500 text-3xl">&#10003;</span>
                <span class=" ml-3 text-gray-500 text-left">More features</span>
              </li>
            </ul>
          </div>
        </div>
        <a
          href="#"
          class="bg-blue-500 text-white hover:bg-blue-600 mt-8 block w-full py-3 px-6 border border-transparent rounded-md text-center font-medium"
          >Sign up</a
        >
      </div>
 </Layout>