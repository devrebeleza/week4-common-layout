---
    import Layout from '../layouts/common.astro';
---
<Layout title="Blog" titleBegin="" titleEffect="Blog" titleEnd="">
     <!-- Blog -->
      <div class=" text-center mt-20 mx-auto max-w-3xl px-10">
        <div
          class="mb-10 p-8 bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col cursor-pointer  
            hover:bg-blue-200 hover:shadow-2xl hover:shadow-red-300 hover:scale-105 hover:-translate-y-1 
            transition ease-in-out delay-150 
            focus:outline-none focus:ring focus:bg-blue-200 focus:ring-violet-300 
            active:bg-blue-50"
        >
          <p class="mb-6">Feb 10 2022</p>
          <h3 class="text-2xl font-bold text-gray-900">February big update</h3>
          <p class="mt-6 text-gray-500">
            Today we present a new big update in february ...
          </p>
        </div>

        <div
          class="mb-10 p-8 bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col cursor-pointer  
            hover:bg-blue-200 hover:shadow-2xl hover:shadow-red-300 hover:scale-105 hover:-translate-y-1 
            transition ease-in-out delay-150 
            focus:outline-none focus:ring focus:bg-blue-200 focus:ring-violet-300 
            active:bg-blue-50"
        >
          <p class="mb-6">Jan 06 2022</p>
          <h3 class="text-2xl font-bold text-gray-900">Some news</h3>
          <p class="mt-6 text-gray-500">
            Today we introduced a new big update ...
          </p>
        </div>
      </div>
</Layout>