---
 const {title,titleBegin, titleEffect, titleEnd} = Astro.props;
 const path = new URL(Astro.request.url).pathname; 
 const styleTitle = 'rounded-lg px-3 py-2 text-slate-700  hover:bg-slate-100 hover:text-slate-900 active:text-slate-900'
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      rel="icon"
      type="image/x-icon"
      href="/apple-touch-icon-sin-fondo-devrebeleza.png"
    />
    <title>{title}</title> 

</head>
<body class="bg-gradient-to-b from-indigo-300 via-purple-300 min-h-screen">
    <div class="pt-8">
     <!-- NavBar tailwind -->
		<nav class="flex justify-center space-x-2 sm:space-x-10 pb-10">
			{[
				['Home', '/'],
				['Pricing', '/pricing'],
				['Blog', '/blog'], 
				['Login', '/login'],
			].map(([title, url]) => (
					<a href={url} class={url === path? 'font-black italic '+ styleTitle : 'font-medium '+ styleTitle }>{title}</a>		 									  
			))}
			<a
					href="/signup"
					class="font-medium text-white  hover:bg-blue-600 bg-blue-500 px-3 sm:px-3 py-2 -mt-1 rounded-lg"
					>Sign up</a
					>
		</nav>
    <!-- Title -->
      <h1
        class="text-center text-3xl mb-10 font-extrabold tracking-tighter text-gray-900"
      > {titleBegin} 
        <span
          class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-pink-500 relative inline-block"
        >
          <span class="relative text-white">{titleEffect}</span>
        </span>
        {titleEnd}
      </h1>
      
      <div class="mt-20 mx-auto text-center max-w-3xl px-10">
	      <slot />
	  </div>
      </div>
      <!-- Footer -->
      <footer class="mt-20 pt-8 pb-4 border-t-2 border-gray-300 bg-gray-800 sticky top-[100vh]">
        <nav class="flex justify-center pb-10 space-x-10">
          <a
            href="/"
            class="font-medium text-gray-500 hover:text-gray-300 hover:underline"
            >Home</a
          >
          <a
            href="#features"
            class=" font-medium text-gray-500 hover:text-gray-300 hover:underline"
            >Features</a
          >
          <a
            href="/pricing"
            class=" font-medium text-gray-500 hover:text-gray-300 hover:underline"
            >Pricing</a
          >
        </nav>
        <p class=" text-center text-gray-400">
          &copy; 2022 Great Tool. All rights reserved &raquo; <a
            href="https://renzogarcia.vercel.app"
            target="_blank" >  devrebeleza</a>
        </p>
      </footer>

</body>
</html>